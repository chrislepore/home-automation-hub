{
  "devices": {
    "light_1": {
      "device_name": "Living Room Light",
      "protocol": "MQTT",
      "event_based": true,
      "address": "home/living_room/light",
      "commands": {
        "turn_on": "turn_on",
        "turn_off": "turn_off",
        "toggle": "toggle",
        "set_brightness": "brightness/{value}"
      },
      "state_topic": "home/living_room/light/state"
    },
    "thermostat_1": {
      "device_name": "Kitchen Thermostat",
      "protocol": "REST",
      "event_based": false,
      "base_url": "http://192.168.1.50/api/thermostat",
      "commands": {
        "set_temperature": {
          "method": "POST",
          "endpoint": "/set_temp",
          "data": {
            "temp": "{value}"
          }
        },
        "get_temperature": {
          "method": "GET",
          "endpoint": "/status"
        }
      }
    },
    "lock_1": {
      "device_name": "Front Door Lock",
      "protocol": "BLE",
      "event_based": false,
      "ble_address": "00:1A:7D:DA:71:13",
      "commands": {
        "lock": {
          "write_characteristic": "1234",
          "value": "01"
        },
        "unlock": {
          "write_characteristic": "1234",
          "value": "00"
        },
        "get_status": {
          "read_characteristic": "5678"
        }
      }
    },
    "sensor_1": {
      "device_name": "Hallway Motion Sensor",
      "protocol": "Zigbee",
      "event_based": true,
      "zigbee_id": "motion_12345",
      "state_topic": "zigbee/motion_12345"
    },
    "light_2": {
      "device_name": "Bedroom Light",
      "protocol": "REST",
      "event_based": false,
      "base_url": "http://192.168.1.51/api/light",
      "commands": {
        "turn_on": {
          "method": "POST",
          "endpoint": "/on"
        },
        "turn_off": {
          "method": "POST",
          "endpoint": "/off"
        },
        "get_state": {
          "method": "GET",
          "endpoint": "/status"
        }
      }
    },
    "camera_1": {
      "device_name": "Security Camera",
      "protocol": "RTSP",
      "event_based": false,
      "stream_url": "rtsp://192.168.1.100:554/live",
      "commands": {
        "take_snapshot": {
          "method": "GET",
          "endpoint": "/snapshot"
        },
        "start_recording": {
          "method": "POST",
          "endpoint": "/record/start"
        },
        "stop_recording": {
          "method": "POST",
          "endpoint": "/record/stop"
        }
      }
    }
  }
}