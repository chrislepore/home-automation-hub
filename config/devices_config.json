{
  "devices": {
    "light_1": {
      "device_name": "Living Room Light",
      "protocol": "MQTT",
      "address": "home/living_room/light",
      "commands": {
        "turn_on": "turn_on",
        "turn_off": "turn_off",
        "toggle": "toggle",
        "set_brightness": "brightness/{value}"
      },
      "state_topic": "home/living_room/light/state",
      "event_based": true
    },

    "thermostat_1": {
      "device_name": "Kitchen Thermostat",
      "protocol": "REST",
      "base_url": "http://192.168.1.50/api/thermostat",
      "commands": {
        "set_temperature": {
          "method": "POST",
          "endpoint": "/set_temp",
          "data": { "temp": "{value}" }
        },
        "get_temperature": {
          "method": "GET",
          "endpoint": "/status"
        }
      },
      "polling_interval": 10,
      "event_based": false
    },

    "lock_1": {
      "device_name": "Front Door Lock",
      "protocol": "BLE",
      "ble_address": "00:1A:7D:DA:71:13",
      "commands": {
        "lock": {
          "write_characteristic": "1234",
          "value": "01"
        },
        "unlock": {
          "write_characteristic": "1234",
          "value": "00"
        },
        "get_status": { "read_characteristic": "5678" }
      },
      "polling_interval": 30,
      "event_based": false
    },

    "sensor_1": {
      "device_name": "Hallway Motion Sensor",
      "protocol": "Zigbee",
      "zigbee_id": "motion_12345",
      "commands": {},
      "state_topic": "zigbee/motion_12345",
      "event_based": true
    },

    "light_2": {
      "device_name": "Bedroom Light",
      "protocol": "REST",
      "base_url": "http://192.168.1.51/api/light",
      "commands": {
        "turn_on": {
          "method": "POST",
          "endpoint": "/on"
        },
        "turn_off": {
          "method": "POST",
          "endpoint": "/off"
        },
        "get_state": {
          "method": "GET",
          "endpoint": "/status"
        }
      },
      "polling_interval": 5,
      "event_based": false
    },

    "camera_1": {
      "device_name": "Security Camera",
      "protocol": "RTSP",
      "stream_url": "rtsp://192.168.1.100:554/live",
      "commands": {
        "take_snapshot": {
          "method": "GET",
          "endpoint": "/snapshot"
        },
        "start_recording": {
          "method": "POST",
          "endpoint": "/record/start"
        },
        "stop_recording": {
          "method": "POST",
          "endpoint": "/record/stop"
        }
      },
      "polling_interval": 60,
      "event_based": false
    }
  },
  "modules": {
    "ble": {
      "input" : "home/handlers/ble/input",
      "output": "home/handlers/ble/output"
    },
    "zigbee": {
      "input" : "home/handlers/zigbee/input",
      "output": "home/handlers/zigbee/output"
    },
    "rest": {
      "input" : "home/handlers/rest/input",
      "output": "home/handlers/rest/output"
    },
    "camera": {
      "input" : "home/handlers/camera/input",
      "output": "home/handlers/camera/output"
    },
    "web": {
      "input" : "home/web/input",
      "output": "home/web/output"
    }
  }
}
